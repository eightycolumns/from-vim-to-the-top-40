#ifndef REVERB_BUS
#define REVERB_BUS # 1 #

#include "plugin/gain"

gaReverbBusL init 0
gaReverbBusR init 0

opcode ToReverbBus, 0, aai
  aInL, aInR, iSendLevel xin

  aInL, aInR Gain aInL, aInR, iSendLevel

  gaReverbBusL += aInL
  gaReverbBusR += aInR
endop

opcode FromReverbBus, aa, 0
  aOutL = gaReverbBusL
  aOutR = gaReverbBusR

  gaReverbBusL = 0
  gaReverbBusR = 0

  xout aOutL, aOutR
endop

#end
